<% layout('layouts/boilerplate') -%>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form action="/listing" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Enter Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="enter the title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Please enter the valid title.
          </div>
        </div>

        <div class="mb-3">
          <label for="Description" class="form-label">Enter Description</label>
          <textarea
            type="text"
            name="listing[description]"
            placeholder="enter the description"
            rows="5"
            cols="20"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please enter the valid description.
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Enter URL/link of image</label>
          <input
            type="text"
            name="listing[image]"
            placeholder="enter the link/url of image"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Enter Price</label>
          <input
            
            name="listing[price]"
            placeholder="enter the price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Please enter the valid Price.
          </div>
        </div>

        <div class="row">

        <div class="mb-3 col-md-6">
          <label for="location" class="form-label">Enter location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter the location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Please enter the valid location.
          </div>
        </div>

        <div class="mb-3 col-md-6">
          <label for="country" class="form-label">Enter country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="enter the country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Please enter the valid country.
          </div>
        </div>
      </div>

        <button class="btn btn-dark mb-3 add-btn">Submit</button>
      </form>
    </div>
  </div>
</body>
